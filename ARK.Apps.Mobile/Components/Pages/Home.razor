@page "/"

<div class="card">
    <h2>Finding kindness...</h2>
    <p>Preparing something beautiful for you</p>
    <div class="loading-dots">
        <div class="dot dot-1"></div>
        <div class="dot dot-2"></div>
        <div class="dot dot-3"></div>
    </div>
</div>

<style>
    .card {
        text-align: center;
        display: flex;
        justify-content: center;
        align-items: center;
        border: none;
    }

        .card p {
            color: rgb(107, 114, 128);
            font-size: 14px;
            margin-bottom: 24px;
        }

        .card h2 {
            font-size: 20px;
            font-weight: 600;
            color: rgb(31, 41, 55);
            margin-bottom: 8px;
        }

    .loading-dots {
        display: flex;
        justify-content: center;
        gap: 4px;
    }

    .dot {
        width: 8px;
        height: 8px;
        background: #d8b4fe;
        border-radius: 50%;
        animation: bounce 1.4s infinite ease-in-out;
    }

    .dot-1 {
        animation-delay: 0ms;
    }

    .dot-2 {
        animation-delay: .15s;
    }

    .dot-3 {
        animation-delay: .3s;
    }

    @@keyframes bounce
    {
        0%, 80%, 100% {
            transform: scale(0);
        }

        40% {
            transform: scale(1);
        }
    }
</style>