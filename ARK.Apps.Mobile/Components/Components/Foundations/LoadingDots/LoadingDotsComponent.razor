@using ARK.Apps.Mobile.Components.Bases

<StyleBase @ref=@ComponentStyle
           Styles=@Style />

<DivisionBase @ref=@DotsLoaderContainerDivision>

    <LargeHeaderBase @ref=@LargeHeader
                     Text="Finding kindness..."
                     CssClass="large-header" />

    <ParagraphBase @ref=@Paragraph
                   Text="Preparing something beautiful for you"
                   CssClass="paragraph" />

    <DivisionBase @ref=@DotsContainerDivision
                  CssClass="loading-dots-container">

        <DivisionBase @ref=@Dot0Division
                      CssClass="dot dot-0" />

        <DivisionBase @ref=@Dot1Division
                      CssClass="dot dot-1" />

        <DivisionBase @ref=@Dot2Division
                      CssClass="dot dot-2" />

    </DivisionBase>
</DivisionBase>
