@using ARK.Apps.Mobile.Components.Bases
@using ARK.Apps.Mobile.Models.Views.Components.ArkComponents
@using PrettyBlazor

<Switch TValue=ArkComponentState Value=State>
    <SwitchCase TValue=ArkComponentState When=ArkComponentState.Loading>
        <LabelBase @ref=LoadingLabel
                   Value="Loading ..." />
    </SwitchCase>
    <SwitchCase TValue=ArkComponentState When=ArkComponentState.Content>
        <CarouselBase @ref=@Carousel>
            <Iterations Items=@ArkViews Context=arkView>
                <CarouselItemBase Value="@arkView.Act" />
            </Iterations>
        </CarouselBase>
    </SwitchCase>
    <SwitchCase TValue=ArkComponentState When=ArkComponentState.Error>
        <LabelBase @ref=ErrorLabel
                   Value=@GetErrorMessage() />
    </SwitchCase>
</Switch>

